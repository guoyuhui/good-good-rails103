<div class="col-md-12">
  <div class="group">
    <%= link_to('写文章', new_group_post_path(@group), class: 'btn btn-default pull-right')%>

    <%= link_to('edit', edit_group_path(@group), class: "btn btn-primary pull-right")%>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>文章内容</th>
        <th>发表者</th>
        <th>发表时间</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%=  post.content %></td>
        <td><%= post.user.email %></td>
        <td><%= post.created_at %></td>
      </tr>
      <% end %>
    </tbody>

  </table>

    <div class="text-center">
      <%= will_paginate @posts %>
    </div>

</div>
